@page
@model StyleShopping.Pages.ProjectModel
<section class="blog-section">
    <div class="text-center"><h1>Projects</h1></div>
    <div class="auto-container mt-2">
        <div class="row">
            @foreach(var item in Model.list)
            {
                <div class="news-block-two col-lg-6 col-md-12 col-sm-12">
                    <div class="inner-box">
                        <div class="image-box">
                            <figure class="image"><img src="@item.Image" alt=""></figure>
                            <div class="overlay-box"><a href="blog-detail.html"><i class="fa fa-link"></i></a></div>
                        </div>
                        
                    </div>
                </div>
            }
            <!-- News Block -->
           

            <!-- News Block -->
            
        </div>

        <!--Post Share Options-->
         <div class="styled-pagination">
                        <ul class="clearfix">
                @for (int i = 1; i <= Model.totalPage; i++)
                {
                                        <li class="@(Model.indexPage == i ? "active":"")"><a asp-page="./Project" asp-route-id="@i">@i</a></li>
                }

                        </ul>
                    </div>
    </div>
</section>
