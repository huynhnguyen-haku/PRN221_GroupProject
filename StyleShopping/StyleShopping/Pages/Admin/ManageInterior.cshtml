@page
@model StyleShopping.Pages.Admin.ManageInteriorModel
<section class="cart-section">
    <div class="auto-container">
        <!--Cart Outer-->
        <div class="cart-outer">
            <div class="table-outer">


               <a class="theme-btn btn-style-one" asp-page="./AddInterior">Create</a>



                <table class="cart-table">
                    <thead class="cart-header">
                        <tr>
                            <th>Image</th>
                            <th class="prod-column">Name</th>
                            <th class="price">Price</th>
                            <th>Category</th>
                            <th>Status</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach(var item in Model.list)
                        {
                             <tr>
                                    <td class="prod-column">
                                        <div class="column-box">
                                            <figure class="prod-thumb"><img src="@item.Image" alt=""></figure>
                                        </div>
                                    </td>
                                    <td><h4 class="prod-title"></h4>@item.Name</td>
                                    <td class="sub-total">@item.Price $</td>
                                    <td class="qty">
                                       @item.Cate.Name
                                    </td>
                                    <td class="total">
                                    @if(item.Status == 0)
                                    {
                                        <span style="color:red">Block</span>
                                    }else{
                                        <span style="color:green">Active</span>
                                    }
                                </td>
                                    <td>
                                    @if (item.Status == 0)
                                    {
                                        <a asp-page="./ActiveInterior" asp-route-id="@item.Id" class="remove-btn"><span class="fa fa-unlock"></span></a>
                                    }
                                    else
                                    {
                                        <a asp-page="./BlockInterior" asp-route-id="@item.Id" class="remove-btn"><span class="fa fa-lock"></span></a>
                                    }
                                        <a asp-page="./EditInterior" asp-route-id="@item.Id" class="remove-btn"><span class="fa fa-pencil"></span></a>    
                                    </td>
                                </tr>
                        }
                       

                    </tbody>
                </table>
                <div class="styled-pagination mt-2">
                        <ul class="clearfix">
                        @for (int i = 1; i <= Model.totalPage; i++)
                        {
                                    <li class="@(Model.indexPage == i ? "active":"")"><a asp-page="./ManageInterior"  asp-route-id="@i">@i</a></li>
                        }

                 </ul>
                    </div>
            </div>


        </div>

       
    </div>
</section>
