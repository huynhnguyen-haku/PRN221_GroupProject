@page
@model StyleShopping.Pages.ProfileModel
<div class="column col-lg-6 col-md-12 col-sm-12">
    <span style="color:red">@Model.errorUpdate</span>
    <span style="color:green">@Model.success</span>
    <h2>Profile</h2>

    <!-- Register Form -->
    <div class="login-form register-form">
        <!--Login Form-->
        <form method="post">
            <div class="form-group">
                <label>Username</label>
                <input type="text" asp-for="account.Username" readonly>
            </div>
            <input type="hidden" asp-for="account.Id">
            <input type="hidden" asp-for="account.Role">
            <input type="hidden" asp-for="account.Status">
            <div class="form-group">
                <label>Password</label>
                <input type="password" asp-for="account.Password" required>
            </div>
            <div class="form-group">
                <label>Phone</label>
                <input type="text" asp-for="account.Phone" required>
            </div>
            <div class="form-group">
                <label>Address</label>
                <input type="text" asp-for="account.Address" required>
            </div>

            <div class="form-group text-right">
                <button class="theme-btn btn-style-one" type="submit" name="submit-form">Update</button>
            </div>
        </form>
    </div>
    <!--End Register Form -->
</div>
